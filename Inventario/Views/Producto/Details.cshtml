@model Inventario.Models.Producto

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detalles del Producto</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

    <div class="container">
        <h4>Detalles del Producto</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Nombre</dt>
            <dd class="col-sm-10">@Model.NombreProd</dd>
            <dt class="col-sm-2">Cantidad</dt>
            <dd class="col-sm-10">@Model.Cantidad</dd>
            <dt class="col-sm-2">Activo</dt>
            <dd class="col-sm-10">@Model.Activo ? "Activo" : "Inactivo"</dd>
        </dl>
    </div>

    <div class="container">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a> |
        <a asp-action="Index" class="btn btn-secondary">Regresar a la Lista</a>
    </div>

</body>
</html>
