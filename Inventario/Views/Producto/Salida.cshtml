@model Inventario.Models.Producto


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Salida de Productos</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h2>Salida de Productos</h2>
        <form asp-action="Salida" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label>Cantidad actual:</label>
                <input type="text" class="form-control" value="@ViewBag.CantidadActual" readonly />
            </div>

            <div class="form-group">
                <label>Cantidad a sacar:</label>
                <input type="number" name="cantidad" class="form-control" min="1" max="@ViewBag.CantidadActual" required />
            </div>

            <input type="hidden" name="id" value="@ViewBag.ProductId" />

            <button type="submit" class="btn btn-primary">Sacar</button>
        </form>
    </div>
</body>
</html>
