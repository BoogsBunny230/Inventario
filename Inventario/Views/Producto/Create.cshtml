@model Inventario.Models.Producto

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Crear Producto</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

    <div class="container">
        <h4>Crear Nuevo Producto</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="NombreProd" class="control-label">Nombre</label>
                        <input asp-for="NombreProd" class="form-control" required />
                        <span asp-validation-for="NombreProd" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cantidad" class="control-label">Cantidad Inicial</label>
                        <input asp-for="Cantidad" class="form-control" value="0" readonly />
                        <span asp-validation-for="Cantidad" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <input class="form-check-input" asp-for="Activo" />
                        <label class="form-check-label" for="Activo">@Html.DisplayNameFor(model => model.Activo)</label>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Crear</button>
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index" class="btn btn-secondary">Regresar</a>
        </div>
    </div>

    @section Scripts {
        <script>
            // Aquí puedes agregar tu lógica JavaScript para cambiar dinámicamente el comportamiento de la vista según la acción
        </script>
    }
</body>
</html>
